<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:background="#ffffff"
		android:orientation="vertical"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp" >

		<LinearLayout
			android:id="@+id/ll_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:visibility="gone" >

			<TextView
				android:id="@+id/tv_title"
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:background="@drawable/bg_white_aaaaaa"
				android:gravity="center_vertical"
				android:textColor="#FF9800"
				android:textSize="18sp" />

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#BCBCBC" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:orientation="vertical">
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:background="#ffffff">
				<TextView
					android:id="@+id/tv_name"
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_alignParentLeft="true"
					android:text="名称"
					android:textColor="#353535"
					android:textSize="16sp"/>

				<EditText
					android:id="@+id/et_name"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:minHeight="48dp"
					android:layout_toRightOf="@id/tv_name"
					android:layout_marginLeft="4dp"
					android:paddingRight="8dp"
					android:layout_centerVertical="true"
					android:gravity="center_vertical|right"
					android:background="@drawable/edittext_hc"
					android:hint=""
					android:textColor="#AAAAAA"
					android:textSize="16sp"
					android:visibility="gone"/>
				<TextView
					android:id="@+id/tv_name_value"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:minHeight="48dp"
					android:layout_toRightOf="@id/tv_name"
					android:layout_marginLeft="4dp"
					android:paddingRight="8dp"
					android:layout_centerVertical="true"
					android:gravity="center_vertical|right"
					android:textColor="#AAAAAA"
					android:textSize="16sp"
					android:visibility="gone"/>
				<View
					android:layout_width="match_parent"
					android:layout_height="0.1dp"
					android:layout_alignParentBottom="true"
					android:background="#dadada" />
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:background="#ffffff">
				<TextView
					android:id="@+id/tv_storage"
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_alignParentLeft="true"
					android:text="实际储量(m³)"
					android:textColor="#353535"
					android:textSize="16sp" />

				<EditText
					android:id="@+id/et_storage"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:minHeight="48dp"
					android:layout_marginLeft="4dp"
					android:layout_toRightOf="@id/tv_storage"
					android:paddingRight="8dp"
					android:layout_centerVertical="true"
					android:gravity="center_vertical|right"
					android:background="@drawable/edittext_hc"
					android:hint=""
					android:inputType="numberDecimal"
					android:textColor="#AAAAAA"
					android:textSize="16sp"
					android:visibility="gone"/>
				<TextView
					android:id="@+id/tv_storage_value"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:minHeight="48dp"
					android:layout_marginLeft="4dp"
					android:layout_toRightOf="@id/tv_storage"
					android:paddingRight="8dp"
					android:layout_centerVertical="true"
					android:gravity="center_vertical|right"
					android:textColor="#AAAAAA"
					android:textSize="16sp"
					android:visibility="gone"/>
				<View
					android:layout_width="match_parent"
					android:layout_height="0.1dp"
					android:layout_alignParentBottom="true"
					android:background="#dadada" />
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:background="#ffffff">
				<TextView
					android:id="@+id/tv_height"
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_alignParentLeft="true"
					android:text="液体高度(m)"
					android:textColor="#353535"
					android:textSize="16sp" />

				<EditText
					android:id="@+id/et_height"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:minHeight="48dp"
					android:layout_marginLeft="4dp"
					android:layout_toRightOf="@id/tv_height"
					android:paddingRight="8dp"
					android:layout_centerVertical="true"
					android:gravity="center_vertical|right"
					android:background="@drawable/edittext_hc"
					android:hint=""
					android:inputType="numberDecimal"
					android:textColor="#AAAAAA"
					android:textSize="16sp"
					android:visibility="gone"/>
				<TextView
					android:id="@+id/tv_height_value"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:minHeight="48dp"
					android:layout_marginLeft="4dp"
					android:layout_toRightOf="@id/tv_height"
					android:paddingRight="8dp"
					android:layout_centerVertical="true"
					android:gravity="center_vertical|right"
					android:textColor="#AAAAAA"
					android:textSize="16sp"
					android:visibility="gone"/>
				<View
					android:layout_width="match_parent"
					android:layout_height="0.1dp"
					android:layout_alignParentBottom="true"
					android:background="#dadada" />
			</RelativeLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginTop="1dp">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="理化性质"
					android:paddingTop="8dp"
					android:paddingBottom="8dp"
					android:paddingLeft="2dp"
					android:textColor="#353535"
					android:background="#F5F5F5"
					android:textSize="16sp"/>
				<EditText
					android:id="@+id/et_nature"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:minHeight="48dp"
					android:layout_marginTop="2dp"
					android:text=""
					android:textColor="#AAAAAA"
					android:textSize="14sp"
					android:inputType="textMultiLine"
					android:background="@null"
					android:gravity="left|top"
					android:visibility="gone"/>
				<TextView
					android:id="@+id/tv_nature"
					android:layout_marginTop="2dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:minHeight="48dp"
					android:text=""
					android:textColor="#AAAAAA"
					android:textSize="14sp"
					android:visibility="gone"/>
				<View
					android:layout_width="match_parent"
					android:layout_height="0.1dp"
					android:background="#BCBCBC"/>
			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/ll_doing"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/btn_list_item_bg">
			<TextView
				android:id="@+id/ll_doing_ng"
				android:layout_width="0dp"
				android:layout_height="48dp"
				android:layout_weight="1"
				android:gravity="center"
				android:text="取消"
				android:textColor="#353535"
				android:background="@drawable/btn_list_item_bg"
				android:textSize="16sp"
				android:clickable="true" />
			<TextView
				android:id="@+id/ll_doing_ok"
				android:layout_width="0dp"
				android:layout_height="48dp"
				android:layout_weight="1"
				android:gravity="center"
				android:text="确认"
				android:textColor="#353535"
				android:background="@drawable/btn_list_item_bg"
				android:textSize="16sp"
				android:clickable="true" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>