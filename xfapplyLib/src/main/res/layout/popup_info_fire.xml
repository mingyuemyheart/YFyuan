<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_extra"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/btn_list_item_bg"
        android:layout_gravity="center"
        android:clickable="true"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text=""
            android:textColor="#0074C7"
            android:textStyle="bold"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#dadada"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp" >
        <RelativeLayout
            android:id="@+id/re_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/rl_qrcode"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_list_item_bg"
            android:clickable="true" >

            <LinearLayout
                android:id="@+id/ll_avatar"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/map_search_suggest" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="放大\n地图"
                    android:textColor="#858585"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/ll_avatar"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="名称"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#353535"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="地址"
                    android:textColor="#656565"
                    android:textSize="13dp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl_qrcode"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_list_item_bg"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">
            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="#dadada"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_qrcode" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingTop="5dp"
                    android:text="分享"
                    android:textColor="#353535"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#dadada"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_info1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_list_item_bg"
            android:clickable="true"
            android:padding="3dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_info1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/outline_fujin" />
                <TextView
                    android:id="@+id/tv_info1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="搜周边"
                    android:textColor="#575757"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#dadada" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_info2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_list_item_bg"
            android:clickable="true"
            android:padding="3dp" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_info2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/outline_quanjing" />
                <TextView
                    android:id="@+id/tv_info2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="街景"
                    android:textColor="#575757"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#dadada" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_info3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_list_item_bg"
            android:clickable="true"
            android:padding="3dp" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_info3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/outline_daohang" />
                <TextView
                    android:id="@+id/tv_info3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="导航"
                    android:textColor="#575757"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#dadada" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_info33"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_list_item_bg"
            android:clickable="true"
            android:padding="3dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/outline_phone" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="电话"
                    android:textColor="#575757"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#dadada" />

    <LinearLayout
        android:id="@+id/ll_fire_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="#ffffff"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:id="@+id/rl_phone"
                android:layout_width="52dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true"
                android:visibility="gone">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/tel_nofound" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="电话"
                    android:textColor="#126FCC"
                    android:textSize="13dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/rl_phone"
                android:layout_marginRight="2dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true">
                <TextView
                    android:id="@+id/tv_outline1"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:text="名称"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#575757"
                    android:textSize="13dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#dadada"/>

                <TextView
                    android:id="@+id/tv_outline2"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="地址"
                    android:textColor="#575757"
                    android:textSize="13dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#dadada"/>

                <TextView
                    android:id="@+id/tv_outline3"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="12dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="地址"
                    android:textColor="#575757"
                    android:textSize="13dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#dadada"/>

                <TextView
                    android:id="@+id/tv_outline4"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="12dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="地址"
                    android:textColor="#575757"
                    android:textSize="13dp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#dadada"/>

        <LinearLayout
            android:id="@+id/rl_zddw"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_info4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_1info4"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:focusable="false"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_jbxx" />
                    <TextView
                        android:id="@+id/tv_info4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="基本信息"
                        android:textColor="#575757"
                        android:textSize="14sp" />
                </LinearLayout>
                <View
                    android:layout_width="0.1dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#dadada" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_info5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_info5"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:focusable="false"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_gjts" />
                    <TextView
                        android:id="@+id/tv_info5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="关键图示"
                        android:textColor="#575757"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#dadada" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_info6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_info6"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:focusable="false"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_qjmy" />
                    <TextView
                        android:id="@+id/tv_info6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="全景漫游"
                        android:textColor="#575757"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#dadada" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_info7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_info7"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:focusable="false"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_swcj" />
                    <TextView
                        android:id="@+id/tv_info7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="三维场景"
                        android:textColor="#575757"
                        android:textSize="14sp" />
                </LinearLayout>
                <View
                    android:layout_width="0.1dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#dadada" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_info8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_info8"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:focusable="false"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_dp" />
                    <TextView
                        android:id="@+id/tv_info8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="处置要点"
                        android:textColor="#575757"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>