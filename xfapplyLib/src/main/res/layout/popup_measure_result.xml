<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/btn_list_item_bg" >

    <RelativeLayout
        android:id="@+id/re_back"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
		android:layout_alignParentLeft="true"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true"
        android:padding="2dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/realtime_more" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/re_delete"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
		android:layout_alignParentRight="true"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true"
        android:padding="2dp">
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/caldis_delete" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/re_rollback"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
		android:layout_toLeftOf="@id/re_delete"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true"
        android:padding="2dp">
        <ImageView
            android:id="@+id/iv_rollback"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/caldis_rollback" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/re_result"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
		android:layout_toLeftOf="@id/re_rollback"
        android:background="@drawable/btn_list_item_bg"
        android:padding="2dp">
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:text="0"
            android:textColor="#353535"
            android:textSize="16sp"
            android:background="@drawable/text_result" />
	    <RelativeLayout
	        android:id="@+id/re_unit"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
			android:layout_toRightOf="@id/tv_result"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerVertical="true"
	        android:background="@drawable/btn_list_item_bg"
	        android:clickable="true">
	        <TextView
	            android:id="@+id/tv_unit"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="ç±³"
	            android:textColor="#353535"
	            android:textSize="16sp" />
	        <ImageView
	            android:id="@+id/iv_unit"
	            android:layout_width="16dp"
	            android:layout_height="16dp"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="5dp"
            	android:layout_toRightOf="@id/tv_unit"
	            android:src="@drawable/city_arrow" />
	    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>