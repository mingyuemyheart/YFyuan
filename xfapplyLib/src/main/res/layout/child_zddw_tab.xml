<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_base_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="3dp" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_base_info"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/tab_zddw_base" />
                <TextView
                    android:id="@+id/tv_base_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="单位概况"
                    android:textColor="#575757"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#dadada" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_zone_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="3dp" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_zone_info"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/tab_zddw_zone" />
                <TextView
                    android:id="@+id/tv_zone_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="建(构)筑物"
                    android:textColor="#575757"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#dadada" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_fire_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="3dp" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_fire_info"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/tab_zddw_fire" />
                <TextView
                    android:id="@+id/tv_fire_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="消防设施"
                    android:textColor="#575757"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#dadada" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_important_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="3dp" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_important_info"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/tab_zddw_important" />
                <TextView
                    android:id="@+id/tv_important_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="重点部位"
                    android:textColor="#575757"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#dadada" />
</LinearLayout>